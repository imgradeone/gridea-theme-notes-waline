<script type="application/javascript" src="https://cdn.jsdelivr.net/npm/@waline/client/dist/Waline.min.js"></script>
<script type="application/javascript">
  new Waline({
    el: '#waline',
    path: location.pathname,
    serverURL: '<%= site.customConfig.walineServerURL %>',
    pageSize: <%= site.customConfig.walinePageSize %>,
    avatar: '<%= site.customConfig.walineAvatar %>',
    placeholder: '<%= site.customConfig.walinePlaceholder %>',
    visitor: <%= site.customConfig.walineVisitor %>,
    highlight: <%= site.customConfig.walineHighlight %>,
    // requiredFields: ['nick','mail'], // 该项请自行修改代码配置
    anonymous: <%= site.customConfig.walineAnonymous %>,
    lang: <%= site.customConfig.walineLang %>
  })
</script>
